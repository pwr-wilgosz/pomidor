<RootWidget>:
# main layout.
    GridLayout:
        id: root_window
        spacing: 2
        padding: 0
        cols: 1
        rows: 2
        
        #Ramka z przesuwającymi się stronami
        PageLayout:
            id: pages_container
            #Ramka strony
            GridLayout:
                id: lists_main
                spacing: 0
                padding: 0
                cols: 2
                rows: 1

                #Etykieta strony
                Label:
                    id: lists_label
                    text: "Wybierz listę"
                    size_hint_x: None
                    size: 20, 10
                    text_size: root.width, None
                    halign: 'center'
                    valign: 'top'
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 90
                            origin: self.center
                    canvas.after:
                        PopMatrix

                #Strona - zawartość
                BoxLayout:
                    id: lists_content
                    size: root.size
                    orientation: "vertical"

                    #Wprowadzanie nazwy nowej listy
                    BoxLayout:
                        size_hint_x: 1
                        size_hint_y: None

                        TextInput:
                            id: lists_new_name
                            size_hint_x:4
                            text_size: root.width, None
                            hint_text: "Nazwa nowej listy"
                        Button:
                            id: lists_new_accept
                            size_hint_x:1
                            size: 20, 20
                            text: "Dodaj"


            Button:
                text: "bouton 6"
            Button:
                text: "bouton 7"

        #pasek menu - dolny 
        ActionBar:
            id: menu_bar
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Action Bar'
                    with_previous: False
                ActionGroup:
                    text: 'File'
                    mode: 'spinner'
                    size_hint_x: None
                    width: 90
                    ActionButton:
                        text: 'New'
                    ActionButton:
                        text: 'Open'
                    ActionButton:
                        text: 'Save'
                    ActionButton:
                        text: 'Save As'
                    ActionButton:
                        text: 'Quit'



