<RootWidget>:
# main layout.
    lists_content: lists_content
    GridLayout:
        id: root_window
        spacing: 2
        padding: 0
        cols: 1
        rows: 2
        
        #Ramka z przesuwającymi się stronami
        PageLayout:
            id: pages_container
            
            #LISTY ZADANIOWE!
            #Ramka strony
            GridLayout:
                id: lists_main
                spacing: 0
                padding: 0
                cols: 2
                rows: 1

                #tlo
                canvas:
                    Color:
                        hsv:  .03, .4, .2
                    Rectangle:
                        pos: self.pos
                        size: self.width, self.height

                #Etykieta strony
                Label:
                    id: lists_label
                    text: "Wybierz listę"
                    size_hint_x: None
                    size: 20, 10
                    text_size: root.width, None
                    halign: 'center'
                    valign: 'top'
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 90
                            origin: self.center
                    canvas.after:
                        PopMatrix

                #Strona - zawartość
                BoxLayout:
                    orientation: "vertical"

                    #Wprowadzanie nazwy nowej listy
                    BoxLayout:
                        size_hint: None, None
                        size: root.width-70, 30

                        TextInput:
                            multiline: False
                            id: lists_new_name
                            size_hint_x:4
                            text_size: self.size
                            valign: 'middle'
                            hint_text: "Nazwa nowej listy"
                        Button:
                            id: lists_new_accept
                            size_hint_x:1
                            text: "Dodaj"
                    #Lista list
                    ScrollView
                        size: root.size
                        GridLayout:
                            id: lists_content
                            size_hint_y: None
                            cols: 1
                            row_default_height: '40dp'
                            row_force_default: True
                            spacing: 0, 0
                            padding: 0, 0

                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"
                            Label:
                                text: "Lorem ipsum dolor sit amet"

            #WYBOR/EDYCJA/DODAWANIE ZADAN
            #Ramka strony
            GridLayout:
                id: tasks_main
                spacing: 0
                padding: 0
                cols: 2
                rows: 1

                #tlo
                canvas:
                    Color:
                        hsv:  .37, .4, .2
                    Rectangle:
                        pos: self.pos
                        size: self.width, self.height


                #Etykieta strony
                Label:
                    id: tasks_label
                    text: "Wybierz zadanie"
                    size_hint_x: None
                    size: 20, 10
                    text_size: root.width, None
                    halign: 'center'
                    valign: 'top'
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 90
                            origin: self.center
                    canvas.after:
                        PopMatrix

                #Strona - zawartość
                BoxLayout:
                    orientation: "vertical"

                    #Widok zadan
                    GridLayout:
                        cols:3
                        rows:3
                        

                        StackLayout:
                            size_hint: 1,1
                        StackLayout:
                            size_hint: 4,1
                            Label:  
                                text: 'Ważne'
                        StackLayout:
                            size_hint: 4,1
                            Label:  
                                text: 'Nie ważne'
                        StackLayout:
                            size_hint: 1,4
                            Label:  
                                text: 'Pilne'
                        StackLayout:
                            id: 'cell-imp-urg'
                            canvas:
                                Color:
                                    hsv: 1, .5, .3
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        StackLayout:
                            id: 'cell-nimp-urg'
                            canvas:
                                Color:
                                    hsv: 0.7, .5, .3
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        StackLayout:
                            size_hint: 1,4
                            Label:  
                                text: 'Nie pilne'
                        StackLayout:
                            id: 'cell-imp-nurg'
                            canvas:
                                Color:
                                    hsv: 0.5, .5, .3
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        StackLayout:
                            id: 'cell-nimp-nurg'
                            canvas:
                                Color:
                                    hsv: 0.2, .5, .3
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
            
            #Czasomierz
            #Ramka strony
            GridLayout:
                id: timer_main
                spacing: 0
                padding: 0
                cols: 2
                rows: 1

                #tlo
                canvas:
                    Color:
                        hsv:  .7, .4, .2
                    Rectangle:
                        pos: self.pos
                        size: self.width, self.height


                #Etykieta strony
                Label:
                    id: tasks_label
                    text: "Kontroluj czas"
                    size_hint_x: None
                    size: 20, 10
                    text_size: root.width, None
                    halign: 'center'
                    valign: 'top'
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 90
                            origin: self.center
                    canvas.after:
                        PopMatrix

                #Strona - zawartość
                Label:
                    split_str: ''
                    text: 'czasomierz'

        #pasek menu - dolny 
        ActionBar:
            id: menu_bar
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Pomidor'
                    with_previous: False
                ActionGroup:
                    text: 'Menu'
                    mode: 'spinner'
                    size_hint_x: None
                    width: 90
                    ActionButton:
                        text: 'New'
                    ActionButton:
                        text: 'Open'
                    ActionButton:
                        text: 'Save'
                    ActionButton:
                        text: 'Save As'
                    ActionButton:
                        text: 'Quit'






