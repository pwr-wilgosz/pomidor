#:import SwapTransition kivy.uix.screenmanager.SwapTransition


<RootWidget>:
# main layout.
    lists_content: lists_content
    task_nimp_urg: task_nimp_urg
    task_imp_urg: task_imp_urg
    task_imp_nurg: task_imp_nurg
    task_nimp_nurg: task_nimp_nurg

    GridLayout:
        id: root_window
        spacing: 2
        padding: 0
        cols: 1
        rows: 2

        #Ramka z przesuwającymi się stronami
        PageLayout:
            #LISTY ZADANIOWE!
            #Ramka strony
            GridLayout:
                spacing: 3
                padding: 2
                cols: 2
                rows: 1
                canvas:
                    Color:
                        hsv:  .0, .0, .13
                    Rectangle:
                        pos: self.pos
                        size: self.width, self.height

                #Etykieta strony
                Label:
                    markup: True
                    text: root.list_label
                    size_hint_x: None
                    size: 20, 10
                    text_size: root.width, None
                    halign: 'center'
                    valign: 'top'
                    background_color: 0,0,0,0
                    canvas.before:
                        Color:
                            hsv:  .07, .96, .98
                        Rectangle:
                            pos: self.pos
                            size: self.width, self.height
                        PushMatrix
                        Rotate:
                            angle: 90
                            origin: self.center
                    canvas.after:
                        PopMatrix

                #Strona - zawartość
                BoxLayout:
                    orientation: "vertical"

                    #Wprowadzanie nazwy nowej listy
                    BoxLayout:
                        size_hint: 1, None
                        size: 0, 30

                        TextInput:
                            multiline: False
                            id: lists_new_name
                            size_hint_x:4
                            text_size: self.size
                            valign: 'middle'
                            hint_text: "Nazwa nowej listy"
                        Button:
                            on_release: root.add_new_list(lists_new_name)
                            size_hint_x:1
                            text: "Dodaj"
                    #Lista list
                    ScrollView
                        size: root.size
                        GridLayout:
                            id: lists_content
                            size_hint_y: None
                            cols: 1
                            row_default_height: '40dp'
                            row_force_default: True
                            spacing: 3
                            padding: 0, 3



            #WYBOR/EDYCJA/DODAWANIE ZADAN
            #Ramka strony
            GridLayout:
                id: tasks_main
                spacing: 3
                padding: 2
                cols: 2
                rows: 1

                #tlo
                canvas:
                    Color:
                        hsv:  .0, .0, .13
                    Rectangle:
                        pos: self.pos
                        size: self.width, self.height


                #Etykieta strony
                Label:
                    markup: True
                    text: root.task_label
                    size_hint_x: None
                    size: 20, 10
                    text_size: root.width, None
                    halign: 'center'
                    valign: 'top'
                    canvas.before:
                        Color:
                            hsv:  .4, .96, .98
                        Rectangle:
                            pos: self.pos
                            size: self.width, self.height
                        PushMatrix
                        Rotate:
                            angle: 90
                            origin: self.center
                    canvas.after:
                        PopMatrix

                #Strona - zawartość
                BoxLayout:
                    orientation: "vertical"

                    #Widok zadan
                    GridLayout:
                        cols:3
                        rows:3


                        StackLayout:
                            size_hint: 1,1
                        StackLayout:
                            size_hint: 4,1
                            Label:
                                text: 'Ważne'
                        StackLayout:
                            size_hint: 4,1
                            Label:
                                text: 'Nie ważne'
                        StackLayout:
                            size_hint: 1,4
                            Label:
                                text: 'Pilne'
                                canvas.before:
                                    PushMatrix
                                    Rotate:
                                        angle: 90
                                        origin: self.center
                                canvas.after:
                                    PopMatrix
                        FloatLayout:
                            pos: self.parent.pos
                            Button:
                                pos: self.parent.pos
                                background_color: 0,0,0,0
                                on_press: root.add_new_task(1)

                            StackLayout:
                                id: task_imp_urg
                                pos: self.parent.pos
                                spacing: 5
                                padding: 5
                                canvas:
                                    Color:
                                        hsv: 1, .3, .8
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos

                        FloatLayout:
                            pos: self.parent.pos
                            Button:
                                pos: self.parent.pos
                                background_color: 0,0,0,0
                                on_press: root.add_new_task(2)
                            StackLayout:
                                id: task_nimp_urg
                                pos: self.parent.pos
                                spacing: 5
                                padding: 5
                                canvas:
                                    Color:
                                        hsv: 0.7, .2, .8
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos

                        StackLayout:
                            size_hint: 1,4
                            Label:
                                text: 'Nie pilne'
                                canvas.before:
                                    PushMatrix
                                    Rotate:
                                        angle: 90
                                        origin: self.center
                                canvas.after:
                                    PopMatrix

                        FloatLayout:
                            pos: self.parent.pos
                            Button:
                                pos: self.parent.pos
                                background_color: 0,0,0,0
                                on_press: root.add_new_task(3)
                            StackLayout:
                                id: task_imp_nurg
                                pos: self.parent.pos
                                spacing: 5
                                padding: 5
                                canvas:
                                    Color:
                                        hsv: 0.5, .3, .8
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos

                        FloatLayout:
                            pos: self.parent.pos
                            Button:
                                pos: self.parent.pos
                                background_color: 0,0,0,0
                                on_press: root.add_new_task(4)
                            StackLayout:
                                id: task_nimp_nurg
                                pos: self.parent.pos
                                spacing: 5
                                padding: 5
                                canvas:
                                    Color:
                                        hsv: 0.2, .2, .8
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos

            #Czasomierz
            #Ramka strony
            GridLayout:
                id: timer_main
                spacing: 3
                padding: 2
                cols: 2
                rows: 1

                #tlo
                canvas:
                    Color:
                        hsv:  .0, .0, .13
                    Rectangle:
                        pos: self.pos
                        size: self.width, self.height


                #Etykieta strony
                Label:
                    id: tasks_label
                    text: "Kontroluj czas"
                    size_hint_x: None
                    size: 20, 10
                    text_size: root.width, None
                    halign: 'center'
                    valign: 'top'
                    canvas.before:
                        Color:
                            hsv:  .73, .96, .98
                        Rectangle:
                            pos: self.pos
                            size: self.width, self.height
                        PushMatrix
                        Rotate:
                            angle: 90
                            origin: self.center
                    canvas.after:
                        PopMatrix

                #Strona - zawartość
                Label:
                    text: 'czasomierz'

        #pasek menu - dolny
        ActionBar:
            id: menu_bar
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Pomidor'
                    with_previous: False
                ActionGroup:
                    text: 'Menu'
                    mode: 'spinner'
                    size_hint_x: None
                    width: 90
                    ActionButton:
                        text: 'New'
                    ActionButton:
                        text: 'Open'
                    ActionButton:
                        text: 'Save'
                    ActionButton:
                        text: 'Save As'
                    ActionButton:
                        text: 'Quit'
                        on_press: app.get_running_app().stop()


#Login Screen
<LoginScr>:
    canvas:
        Color:
            hsv: .5, .5, .3
        Rectangle:
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            font_size: 42
            text: 'Login'
        TextInput:
            id: typedLogin
            hint_text: 'Login'
        TextInput:
            id: typedPass
            hint_text: 'Haslo'

    Button:
        text: 'Zaloguj'
        size_hint: None, None
        pos_hint: {'right': 1}
        size: 150, 50
        on_release: root.LoginAction(typedLogin.text, typedPass.text)

    Button:
        text: 'Wyjdź'
        size_hint: None, None
        size: 150, 50
        on_release: app.get_running_app().stop()


# POPUPS BEGIN
<InfoPopup>:
    size_hint: .5, .3
    auto_dismiss: False
    title: 'Info'


    #Wprowadzanie nazwy nowej listy
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            multiline: False
            text_size: self.size
            valign: 'middle'
            text: root.pop_descr

        BoxLayout:
            size_hint_y: None
            size: 0, 40
            spacing: 5

            Button:
                text: 'OK'
                on_press: root.AcceptAction()

<AddListPopup@InfoPopup>:
    title: 'Dodano liste!'

<ServReqPopup>:
    size_hint: .5, .3
    auto_dismiss: False
    title: 'Wymagane polaczenie z serwerem'

    #Wprowadzanie nazwy nowej listy
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            multiline: True
            text_size: self.size
            valign: 'middle'
            text: root.pop_descr

        BoxLayout:
            size_hint_y: None
            size: 0, 40
            spacing: 5

            Button:
                id: lists_ed_accept
                text: "Polacz"
                on_press: root.dismiss()
                on_release: app.RunServSync(root.login, root.password)
            Button:
                text: 'Popraw dane'
                on_press: root.dismiss()

<EditListPopup>:
    size_hint: .5, .3
    auto_dismiss: False
    title: 'Edycja listy'

    #Wprowadzanie nazwy nowej listy
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        TextInput:
            multiline: False
            id: lists_ed_name
            text_size: self.size
            valign: 'middle'
            hint_text: "Nowa nazwa listy"

        BoxLayout:
            size_hint_y: None
            size: 0, 40
            spacing: 5

            Button:
                id: lists_ed_accept
                text: "Zmień"
                on_press: root.PerformAction(lists_ed_name.text)
                on_release: root.CloseAndReload(lists_ed_name.text)
            Button:
                text: 'Anuluj'
                on_press: root.dismiss()

<DeleteListPopup>:
    size_hint: .5, .3
    auto_dismiss: False
    title: 'Usuwanie listy'

    #Wprowadzanie nazwy nowej listy
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            multiline: False
            id: lists_ed_name
            text_size: self.size
            valign: 'middle'
            text: "Czy na pewno chcesz usunąć listę?"

        BoxLayout:
            size_hint_y: None
            size: 0, 40
            spacing: 5

            Button:
                id: lists_del_accept
                text: "Usuń"
                on_press: root.PerformAction()
                on_release: root.CloseAndReload()
            Button:
                text: 'Anuluj'
                on_press: root.dismiss()

<PriorityDropDown>:
    Button:
        text: 'Ważne - pilne'
        size_hint_y: None
        height: 20
        on_release: root.MySelect(1, self.text)
    Button:
        text: 'Nie ważne - pilne'
        size_hint_y: None
        height: 20
        on_release: root.MySelect(2, self.text)
    Button:
        text: 'Ważne - nie pilne'
        size_hint_y: None
        height: 20
        on_release: root.MySelect(3, self.text)
    Button:
        text: 'Nie ważne - nie pilne'
        size_hint_y: None
        height: 20
        on_release: root.MySelect(4, self.text)


<CreateTaskPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    # title: 'Tworzenie zadania'

    #Wprowadzanie nazwy nowej listy
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        TextInput:
            multiline: False
            height: '30dp'
            id: new_task_name
            text_size: self.size
            valign: 'middle'
            hint_text: "Nazwa zadania"

        Label:
            text: root.cycleLabel
            text_size: self.size

        Slider:
            id: durSlider
            value: 3
            min: 1
            max: 20
            on_touch_up: root.UpdateLabel(self.value)

        BoxLayout:
            size_hint_y: None
            size: 0, 40
            spacing: 5

            Button:
                id: lists_ed_accept
                text: "Zapisz"
                on_press: root.PerformAction(new_task_name.text, durSlider.value)
                on_release: root.CloseAndReload()
            Button:
                text: 'Anuluj'
                on_press: root.dismiss()

<EditTaskPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    dropButton: dropButton
    durSlider: durSlider

    #Wprowadzanie nazwy nowej listy
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        TextInput:
            multiline: False
            height: '30dp'
            id: new_task_name
            text_size: self.size
            valign: 'middle'
            hint_text: "Nazwa zadania"
            text: root.task_obj.name

        Label:
            text: root.cycleLabel
            text_size: self.size

        Slider:
            id: durSlider
            value: 3
            min: 1
            max: 20
            on_touch_up: root.UpdateLabel(self.value)

        Button:
            id: dropButton
            text: 'Zmiana priorytetu'
            on_release: root.dropdown.open(self)

        BoxLayout:
            size_hint_y: None
            size: 0, 40
            spacing: 5

            Button:
                id: lists_ed_accept
                text: "Zmień"
                on_press: root.PerformAction(new_task_name.text)
                on_release: root.CloseAndReload(new_task_name.text)
            Button:
                text: 'Anuluj'
                on_press: root.dismiss()


<DeleteTaskPopup>:
    size_hint: .5, .3
    auto_dismiss: False
    title: 'Usuwanie listy'

    #Wprowadzanie nazwy nowej listy
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            multiline: False
            id: lists_ed_name
            text_size: self.size
            valign: 'middle'
            text: "Czy na pewno chcesz usunąć zadanie?"

        BoxLayout:
            size_hint_y: None
            size: 0, 40
            spacing: 5

            Button:
                id: lists_del_accept
                text: "Usuń"
                on_press: root.PerformAction()
                on_release: root.CloseAndReload()
            Button:
                text: 'Anuluj'
                on_press: root.dismiss()

<ListEntry>:
    background_color: 0,0,0,.6
    on_press: self.PickListAction()

    BoxLayout:
        pos: self.parent.pos
        size: self.parent.size
        padding: 5, 2, 3, 2
        spacing: 2

        Label:
            size_hint: .6, 1
            text_size: self.size[0], 12
            strip: True
            shorten: True
            shorten_from: 'right'
            font_size: 12

            max_lines: 1.0
            split_str: '...'
            text: root.name
        Button:
            size_hint: .15, 1
            on_press: root.show_edit_list()
            Image:
                source: './img/edit.png'
                y: self.parent.y + self.parent.height/2 - 8
                x: self.parent.x + self.parent.width/2 - 8
                size: 16, 16
        Button:
            size_hint: .15, 1
            on_press: root.show_confirm_list_del()
            Image:
                source: './img/del.png'
                y: self.parent.y + self.parent.height/2 - 8
                x: self.parent.x + self.parent.width/2 - 8
                size: 16, 16

<TaskEntry>:
    size_hint: .45, None
    size: 0, 22
    background_color: 0,0,0,.6
    on_press: self.PickTaskAction()

    BoxLayout:
        pos: self.parent.pos
        size: self.parent.size
        padding: 5, 2, 3, 2
        spacing: 2

        Label:
            size_hint: .6, 1
            text_size: self.size[0], 10
            background_color: 0,0,0,0
            strip: True
            shorten: True
            shorten_from: 'right'
            font_size: 10

            max_lines: 1.0
            split_str: '...'
            text: root.name
        Button:
            size_hint: .15, 1
            on_press: root.show_edit_task()
            Image:
                source: './img/edit.png'
                y: self.parent.y + self.parent.height - 16
                x: self.parent.x + self.parent.width/2 - 8
                size: 16, 16
        Button:
            size_hint: .15, 1
            on_press: root.show_confirm_task_del()
            Image:
                source: './img/del.png'
                y: self.parent.y + self.parent.height - 16
                x: self.parent.x + self.parent.width/2 - 8
                size: 16, 16
